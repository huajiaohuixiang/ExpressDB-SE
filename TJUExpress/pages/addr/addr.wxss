/* pages/addr/addr.wxss */
page{
  background:white;
}
.header {
  width: 100%;
  height:50px;
  display:flex;
  justify-content: center;
  align-items: center;
  box-shadow:0px 0px 5px darkgray;
  margin-bottom: 20px;
}
.body{
  width: 95%;
  margin:0rpx auto;
  /*height: 60vh;*/
  background: #fff;
  border-radius: 15rpx;
  box-shadow:0px 0px 5px darkgray;
}
.btn {
  margin-top: 30px;
  width: 30%;
  background: #444;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow:0px 0px 3px darkgray;
}
.item{
  font-size: 32rpx;
  display: flex;
  padding: 20rpx;
}
.title {
  font-weight: bold;
}
.input{
  /*width: 0;*/
  border-bottom: 1rpx solid #eee;
  flex-grow:0.8;
  color: #444;
}