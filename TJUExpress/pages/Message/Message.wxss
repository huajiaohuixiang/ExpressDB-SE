/* pages/Message.wxss */
page {
  display:flex;
  flex-direction: column;
  align-items: center;
}
.header {
  width:100%;
  height:80px;
  display:flex;
  align-items: center;
  justify-content: center;
  box-shadow:0px 5px 5px darkgray;
}
.headertext {
  font-weight: bold;
  font-size: larger;
}
.item {
  width:98%;
  margin-top: 20px;
  border-radius: 5px;
  box-shadow: 0px 0px 5px #888888;
}
.tab {
  margin-bottom: 5px;
  display: flex;
  flex-direction: row;
  height:40px;
  width:100%;
  background-color:white;
}
.server-img {
  width: 20px;
  height: 20px;
  margin-left:5px;
  margin-top:5px;
}
.title {
  font-weight:bold;
  margin-top: 5px;
  margin-left: 10px;
}
.show {
  height: 20px;
  margin-left: 5px;
  margin-top: 5px;
  font-size: small;
  color:rgb(105, 104, 104);
}
.scroll {
  margin-left: 20px;
  flex-flow: row wrap;
  align-items: flex-start;
}