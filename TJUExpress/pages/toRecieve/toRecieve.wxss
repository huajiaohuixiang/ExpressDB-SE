/* pages/toRecieve/toRecieve.wxss */
.header {
  display:flex;
  justify-content: space-around;
  height:30px;
  width:100%;
}
.content{
  height:100%;
  background-color: lavender;
}
.choose {
  font-size: 15px;
  margin-top: 5px;
  color: #444;
}
.warning {
  margin-left: 10px;
  margin-top: 10px;
}

.item2 {
  display: flex;
  height:100px;
  background-color:#FFFFFF;
  margin: 5px 5px 5px 5px;
  justify-content: space-around;
  align-items: center;
  border-radius: 5px;
}
.item21 {
  width:70%;
  height:100%;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
}
.item22 {
  width:20%;
  height:20px;
}

.scrollView{
  height: 100%;
  width:100%;
  display:flex;
  justify-content: center;
  flex-flow: row wrap;
}
.btn{
  font-size: 28rpx;
  color:rgb(223, 61, 32);
  border:1px solid rgb(223, 61, 32);
  border-radius: 5px;
}
